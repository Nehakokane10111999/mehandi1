<h1 style="text-align: center;">customers</h1>

<table cellspacing="20" cellpadding="20" bgcolor="#FFFFFF" width="500" border="3" align="center">
    <tr>
      <th bgcolor="#FF00FF">Name</th>
      <th bgcolor="#FF00FF">Mobile</th>
      <th bgcolor="#FF00FF">Email</th>
      <th bgcolor="#FF00FF">Address</th>
      <th colspan="3" bgcolor="#FF00FF">Actions</th>
    </tr>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td bgcolor="#FFCC99"><%= user.name %></td>
        <td bgcolor="#FFCC99"><%= user.mobile %></td>
        <td bgcolor="#FFCC99"><%= user.email %></td>
        <td bgcolor="#FFCC99"><%= user.address %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Show', user %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

