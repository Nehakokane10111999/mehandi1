<body class="body"><p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table cellspacing="20" cellpadding="20" bgcolor="#FFFFFF" width="500" border="3" align="center">
  <thead>
    <tr>
      <th bgcolor="#FF00FF">Name</th>
      <th bgcolor="#FF00FF">Mobile no</th>
      <th bgcolor="#FF00FF">Date</th>
      <th bgcolor="#FF00FF">Address</th>
      <th bgcolor="#FF00FF">Design name</th>
      <th colspan="3" bgcolor="#FF00FF">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td bgcolor="#FFCC99"><%= order.name %></td>
        <td bgcolor="#FFCC99"><%= order.mobile_no %></td>
        <td bgcolor="#FFCC99"><%= order.date %></td>
        <td bgcolor="#FFCC99"><%= order.address %></td>
        <td bgcolor="#FFCC99"><%= order.design_name %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Show', order %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Edit', edit_order_path(order) %></td>
        <td bgcolor="#FFCC99"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Order', new_order_path %></button>
<button><%= link_to "Back ", controller: "sessions", action: 'welcome' %></button>

